{
  "name": "voxy",
  "version": "0.1.0",
  "description": "A Vue.js forms component library",
  "keywords": [ "vue", "forms" ],
  "main": "dist/voxy.min.js",
  "author": "tessa",
  "license": "LGPL-3.0-only",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:umd": "vue-cli-service build --target lib --name voxy 'src/buildscript.js'",
    "build:wc:multi": "vue-cli-service build --target wc --name voxy 'src/components/*.vue'",
    "build:wc:async": "vue-cli-service build --target wc-async --name voxy 'src/components/*.vue'",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "normalize.css": "^8.0.0",
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-eslint": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "@vue/eslint-config-prettier": "^3.0.5",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "array-element-newline": [
        "error",
        "never"
      ],
      "block-spacing": "error",
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^_$"
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}